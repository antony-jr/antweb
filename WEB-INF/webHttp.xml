    <!-- cache static files --> 
    <filter>
       <filter-name>ExpiresFilter</filter-name>
       <filter-class>org.apache.catalina.filters.ExpiresFilter</filter-class>
       <init-param>
          <param-name>ExpiresByType image</param-name>
          <param-value>access plus 11 months</param-value>
       </init-param>
       <init-param>
          <param-name>ExpiresByType text/css</param-name>
          <param-value>access plus 11 months</param-value>
       </init-param>
       <init-param>
          <param-name>ExpiresByType application/javascript</param-name>
          <param-value>access plus 11 months</param-value>
       </init-param>
    </filter>
    <filter-mapping>
       <filter-name>ExpiresFilter</filter-name>
       <url-pattern>/antweb_test/images/*</url-pattern>
       <url-pattern>/antweb_test/images/*/*</url-pattern>
       <url-pattern>/antweb_test/common/*</url-pattern>
       <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    
    <!-- Here we can insert code that should be run for every request. -->
    <filter>
        <filter-name>SessionRequestFilter</filter-name>
        <filter-class>org.calacademy.antweb.util.SessionRequestFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SessionRequestFilter</filter-name>
        <url-pattern>*.do</url-pattern>
        <dispatcher>REQUEST</dispatcher>        
    </filter-mapping>
    
</web-app>
