{
    default_sni www.antweb.org      # Sets a default TLS ServerName for when clients do not use SNI in their ClientHello
        servers {
                timeouts {
                        read_body 45m
			read_header 45m
			write       45m
			idle	45m
                }
        }
}


antweb.org {
    redir https://www.antweb.org{uri}
}

api.antweb.org {
    redir https://www.antweb.org{uri} permanent
}


www.antweb.org {
    import Caddyfile.common


    @bots {
        header_regexp User-Agent "(?i)(SemrushBot|Googlebot|Bingbot|Slurp|DuckDuckBot|Baiduspider|YandexBot|Sogou|Exabot|facebot|facebookexternalhit|Bytespider|AppleBot|Swiftbot|Slurp Bot|CCBot|GoogleOther|Google-InspectionTool|MJ12bot|Alexa crawler|Soso Spider|Pinterestbot|Dotbot|AhrefsBot|archive.org_bot)"

    }


    # Use the @bots matcher for blocking bots
    respond @bots "Access Denied" 403
}


