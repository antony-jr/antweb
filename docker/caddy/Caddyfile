{
    order rate_limit before basicauth

    default_sni www.antweb.org
    servers {
        timeouts {
            read_body 45m
            read_header 45m
            write 45m
            idle 45m
        }
    }
}

antweb.org {
    redir https://www.antweb.org{uri}
}

api.antweb.org {
    redir https://www.antweb.org{uri} permanent
}

www.antweb.org {
    @bots {
        header_regexp User-Agent "(?i)(CCBot|Googlebot-Images|Sogou|SenutoBot|SiteScoreBot|Twitterbot|YisouSpider|IABot|Turnitin|CFNetwork/.* Darwin|ClaudeBot|SemrushBot|Googlebot|Bingbot|Slurp|DuckDuckBot|Baiduspider|YandexBot|Sogou|Exabot|facebot|facebookexternalhit|Bytespider|AppleBot|Swiftbot|Slurp Bot|GoogleOther|Google-InspectionTool|MJ12bot|Alexa crawler|Soso Spider|Pinterestbot|Dotbot|AhrefsBot|archive.org_bot|scrapy|PetalBot|Amazonbot|DataForSeoBot|Yeti|Googlebot-Image)"
    }

    log {
        output file /var/log/caddy/access.log {
            roll_size 100MiB
            roll_keep 10
            roll_keep_days 1
        }
        format json
#        format console
    }

    @static_images {
        path_regexp image_file ^/images/(.+\..+)$
    }

    route {
        respond @bots "Access Denied" 403 {
            close
        }

        redir @static_images {$IMAGE_BUCKET_DOMAIN}{uri}

        handle_path /v3.1/* {
            reverse_proxy api:5000
        }

        reverse_proxy antweb:8080

        error "Not found" 404

        rate_limit {
            zone requests {
                key {http.request.remote.host}
                window 1m
                events 10
                burst 20
            }
        }
    }
}
